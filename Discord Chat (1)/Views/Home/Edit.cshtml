@model Discord_Chat__1_.Models.message

@{
    Layout = null;
}

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="icon" href="~/Images/847541504914fd33810e70a0ea73177e.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,200;0,400;1,900&family=PT+Sans:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Style/ForgetPage.css" type="text/css">
    <meta name="viewport" content="width=device-width" />
    <title>Forget Password</title>
</head>
<body>

    <div class="LoginBorder">
        @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.messageId)
            @Html.HiddenFor(x => x.messTime)
            @Html.HiddenFor(x => x.messFromUser)
            @Html.HiddenFor(x => x.messToUser)
            <div>
                <h2 id="Welcome">Edit Text</h2>
            </div>
            <br />
            <div>
                <div id="inputtext">
                    Enter Edit Text
                    <span id="star">*</span>
                </div>
                @*<input id="input" type="text" />*@
                @Html.TextBox("messageBody", null, new {@id="input", @type = "text", @placeholder = "send message", @autocomplete = "off" })
                <br />
            </div>
            <br />
            <div>
                <br />
                <input id="forgotbtn" type="submit" value="Edit" /><br /><br />
            </div>
        }
    </div>

</body>
</html>